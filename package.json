{
    "name": "generator-bfee-revealjs",
    "version": "0.0.1",
    "description": "Yoeman generator for revealjs presentations.",
    "homepage": "https://github.com/brennanfee/generator-bfee-revealjs",
    "author": {
        "name": "Brennan Fee",
        "email": "github@todaytechsoft.biz",
        "url": "https://github.com/brennanfee"
    },
    "files": ["generators"],
    "main": "generators/index.js",
    "keywords": ["yoeman", "generator", "revealjs", "yeoman-generator"],
    "devDependencies": {
        "coveralls": "^2.13.3",
        "eslint": "^4.18.1",
        "eslint-config-prettier": "^2.9.0",
        "eslint-plugin-prettier": "^2.6.0",
        "husky": "^0.14.3",
        "jest": "^22.4.2",
        "lint-staged": "^4.3.0",
        "nsp": "^2.8.1",
        "prettier": "^1.11.0",
        "yeoman-assert": "^3.1.0",
        "yeoman-test": "^1.7.0"
    },
    "dependencies": {
        "ajv": "^6.2.1",
        "chalk": "^2.3.1",
        "generator-bfee-blankrepo": "^1.3.3",
        "lodash": "^4.17.5",
        "mkdirp": "^0.5.1",
        "yeoman-generator": "^2.0.3"
    },
    "jest": {
        "testEnvironment": "node"
    },
    "scripts": {
        "prepublishOnly": "nsp check",
        "pretest": "eslint .",
        "precommit": "lint-staged",
        "test": "jest --coverage"
    },
    "lint-staged": {
        "*.js": ["eslint --fix", "git add"],
        "*.json": ["prettier --write", "git add"]
    },
    "eslintConfig": {
        "extends": ["prettier", "eslint:recommended"],
        "env": {
            "es6": true,
            "jest": true,
            "node": true
        },
        "rules": {
            "prettier/prettier": [
                "error",
                {
                    "tabWidth": 4,
                    "singleQuote": true,
                    "printWidth": 90
                }
            ]
        },
        "plugins": ["prettier"]
    },
    "repository": "brennanfee/generator-bfee-revealjs",
    "license": "Apache-2.0"
}
