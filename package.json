{
    "name": "generator-bfee-revealjs",
    "version": "1.1.0",
    "description": "Yoeman generator for revealjs presentations.",
    "homepage": "https://github.com/brennanfee/generator-bfee-revealjs",
    "author": {
        "name": "Brennan Fee",
        "email": "github@todaytechsoft.biz",
        "url": "https://github.com/brennanfee"
    },
    "files": [
        "generators"
    ],
    "main": "generators/index.js",
    "keywords": [
        "yoeman",
        "generator",
        "revealjs",
        "yeoman-generator"
    ],
    "devDependencies": {
        "coveralls": "^2.13.3",
        "cross-os": "^1.2.2",
        "eslint": "^4.18.1",
        "eslint-config-prettier": "^2.9.0",
        "eslint-plugin-prettier": "^2.6.0",
        "husky": "^0.14.3",
        "jest": "^22.4.2",
        "lint-staged": "^4.3.0",
        "nsp": "^2.8.1",
        "prettier": "^1.11.0",
        "yeoman-assert": "^3.1.0",
        "yeoman-test": "^1.7.0"
    },
    "dependencies": {
        "ajv": "^6.2.1",
        "chalk": "^2.3.1",
        "cheerio": "^1.0.0-rc.2",
        "fs-extra": "^5.0.0",
        "git-config": "0.0.7",
        "git-remote-origin-url": "^2.0.0",
        "github-username": "^4.1.0",
        "lodash": "^4.17.5",
        "node-dir": "^0.1.17",
        "parse-author": "^2.0.0",
        "yeoman-generator": "^2.0.3"
    },
    "jest": {
        "testEnvironment": "node"
    },
    "scripts": {
        "prepublishOnly": "nsp check",
        "pretest": "eslint .",
        "precommit": "lint-staged",
        "test": "jest --coverage"
    },
    "lint-staged": {
        "*.js": [
            "eslint --fix",
            "git add"
        ],
        "*.json": [
            "prettier --write",
            "git add"
        ]
    },
    "eslintConfig": {
        "extends": [
            "prettier",
            "eslint:recommended"
        ],
        "env": {
            "es6": true,
            "jest": true,
            "node": true
        },
        "rules": {
            "prettier/prettier": [
                "error",
                {
                    "tabWidth": 4,
                    "singleQuote": true,
                    "printWidth": 90
                }
            ]
        },
        "plugins": [
            "prettier"
        ]
    },
    "repository": "brennanfee/generator-bfee-revealjs",
    "license": "Apache-2.0"
}
